{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2022",
    "useUnknownInCatchVariables": true,
    "paths": {
      "src/*": ["./src/*"],
      "@/*": ["./*"],
    }
  },
  "include": [
    "src"
  ],
  "plugins": ["@typescript-eslint", "import"]
}
